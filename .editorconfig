# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

# WordPress Coding Standards
# https://make.wordpress.org/core/handbook/coding-standards/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown and JSON files may keep trailing whitespace (e.g., for alignment or formatting)
[*.md]
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2

[*.jsonc]
indent_style = space
indent_size = 2

# PHP files (WordPress standard = 4 spaces)
[*.php]
indent_style = space
indent_size = 4

# SCSS, CSS
[*.scss]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

# JS, JSX, TS, TSX â€” 2-space indent
[*.js]
indent_style = space
indent_size = 2

[*.jsx]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2

[*.tsx]
indent_style = space
indent_size = 2
